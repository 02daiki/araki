<p id="notice"><%= notice %></p>

<p>
    <strong>タイトル</strong>
    <% if @blog.category == "show" %>
    <%= @blog.title %>
    <% end %>
</p>

<p>
    <strong>時間</strong>
    <% if @blog.category == "show" %>
    <%= @blog.start_time.strftime("%Y-%m-%d %H:%M") %>
    <% end %>
</p>



<p>
    <strong>内容</strong>
    <% if @blog.category == "show" %>
    <%= @blog.content %>
    <% end %>
</p>

<p>
<%= button_to '削除',blog_path(@blog.id), method: :delete %>
</p>


